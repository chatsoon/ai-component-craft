{
  "name": "ai-component-craft",
  "displayName": "AI Component Craft",
  "description": "用AI生成高质量React/Vue组件",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "component",
    "react",
    "vue",
    "generator",
    "code generation"
  ],
  "activationEvents": [
    "onCommand:ai-component-craft.generateComponent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-component-craft.generateComponent",
        "title": "生成AI组件",
        "category": "AI Component Craft",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-component-craft.openSettings",
        "title": "打开设置",
        "category": "AI Component Craft"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ai-component-craft.generateComponent",
          "group": "2_workspace@5",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "ai-component-craft.generateComponent",
          "group": "9_cutcopypaste@5"
        }
      ]
    },
    "configuration": {
      "title": "AI Component Craft",
      "properties": {
        "aiComponentCraft.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key",
          "scope": "application"
        },
        "aiComponentCraft.defaultFramework": {
          "type": "string",
          "default": "react",
          "enum": ["react", "vue", "angular", "svelte"],
          "description": "默认框架"
        },
        "aiComponentCraft.defaultStyling": {
          "type": "string",
          "default": "tailwind",
          "enum": ["tailwind", "css", "scss", "styled-components", "css-modules"],
          "description": "默认样式方案"
        },
        "aiComponentCraft.typescript": {
          "type": "boolean",
          "default": true,
          "description": "默认使用TypeScript"
        },
        "aiComponentCraft.model": {
          "type": "string",
          "default": "gpt-4",
          "enum": ["gpt-4", "gpt-3.5-turbo"],
          "description": "AI模型"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "aiComponentCraftSidebar",
          "name": "AI Component Craft",
          "when": "aiComponentCraft.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiComponentCraft",
          "title": "AI Component Craft",
          "icon": "$(sparkle)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "openai": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/ai-component-craft.git"
  },
  "bugs": {
    "url": "https://github.com/yourname/ai-component-craft/issues"
  },
  "homepage": "https://github.com/yourname/ai-component-craft#readme",
  "license": "MIT"
}